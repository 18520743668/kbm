.search-top {
    width: 100%;
    margin: 20rpx 0;
    padding: 0 0 0 20rpx;
    font-size: 28rpx;
    color: #333;
}

.search-top,.search-top .search-left {
    height: 72rpx;
    line-height: 72rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    flex-direction: row;
}

.search-top .search-left {
    width: 650rpx;
    border: 1px solid #999;
    border-radius: 36rpx;
    padding: 0 30rpx;
}

.search-top .search-left .search-icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    display: inline-block;
    margin-right: 20rpx;
}

.search-top .search-right {
    width: 80rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-top .reset-icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    display: inline-block;
}

.tab-center {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #333;
    align-items: center;
    margin: 0 0 20rpx;
}

.tab-center view {
    flex: 1;
    text-align: center;
}

.tab-center view.active {
    border-bottom: 2px solid #258df2;
    font-weight: 800;
}

.heroList {
    width: 100%;
    padding: 5%;
    box-sizing: border-box;
    margin: 20rpx auto;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.heroList,.heroList .list-item {
    display: flex;
}

.heroList .list-item {
    width: 20%;
    text-align: center;
    margin-bottom: 50rpx;
}

.heroList .list-item:nth-child(3n) {
    margin-right: 0;
}

.list-item image {
    width: 120rpx;
    height: 120rpx;
    border: 2px solid #258df2;
    border-radius: 10px 0 10px 0;
}

.list-item .list-text {
    font-size: 30rpx;
    line-height: 50rpx;
    color: #333;
}

.common-mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.pop-content {
    width: 630rpx;
    min-height: 500rpx;
    position: absolute;
    top: 20%;
    left: 50%;
    margin-left: -315rpx;
    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKAQMAAAC3/F3+AAAABGdBTUEAALGPC/xhBQAAAANQTFRFCg4dV2j5WwAAAAF0Uk5TvfU2F1cAAAALSURBVAjXY2DABwAAHgABboVHMgAAAABJRU5ErkJggg==) repeat;
    border-radius: 8rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.pop-content .pop-top {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.pop-top .hero-img {
    width: 210rpx;
}

.pop-top .hero-img image {
    width: 200rpx;
    height: 200rpx;
    border: 2px solid #fff;
    border-radius: 10px 0 10px 0;
}

.pop-content .hero-intro {
    flex: 1;
    display: flex;
    flex-direction: column;
    color: #fff;
}

.hero-intro .title {
    font-size: 48rpx;
    color: #f3c258;
    line-height: 60rpx;
}

.hero-intro .name {
    font-size: 80rpx;
    font-weight: 700;
    color: #fff;
    line-height: 148rpx;
}

.hero-intro .type {
    font-size: 40rpx;
    color: #fff;
    line-height: 60rpx;
}

.pop-content .hero-power {
    width: 100%;
    display: flex;
    flex-direction: column;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #fff;
    margin-top: 20rpx;
}

.pop-content .hero-power text {
    height: 48rpx;
    vertical-align: top;
    margin-bottom: 24rpx;
}

.power-btn {
    margin: auto;
    width: 150px;
    height: 40px;
    border: 2px solid #fff;
    border-radius: 4px;
    line-height: 40px;
    text-align: center;
    color: #fff;
    font-size: 16px;
}